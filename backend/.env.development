# backend/.env.development
# Development Environment Configuration - FIXED
# Path: backend/.env.development

# ============================================================================
# PROJECT INFO
# ============================================================================
PROJECT_NAME="Enterprise Modeling Platform"
VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=*

# ============================================================================
# CORS CONFIGURATION - CRITICAL FIX
# ============================================================================
# IMPORTANT: Include all frontend development URLs
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# ============================================================================
# DATABASE - POSTGRESQL
# ============================================================================
POSTGRES_USER=modeling
POSTGRES_PASSWORD=modeling_dev
POSTGRES_HOST=modeling-postgres
POSTGRES_PORT=5432
POSTGRES_DB=modeling_platform

# Connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================================================
# GRAPH DATABASE - FALKORDB
# ============================================================================
FALKORDB_HOST=modeling-falkordb
FALKORDB_PORT=6379
FALKORDB_GRAPH_NAME=modeling_graph
FALKORDB_PASSWORD=
FALKORDB_DB=0

# Connection settings
FALKORDB_MAX_RETRIES=3
FALKORDB_RETRY_DELAY=1
FALKORDB_CONNECTION_TIMEOUT=5

# ============================================================================
# CACHE - REDIS
# ============================================================================
REDIS_HOST=modeling-redis
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0

# Cache settings
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# IMPORTANT: Change these in production!
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
BCRYPT_ROUNDS=12

# ============================================================================
# JWT SETTINGS
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@modelingplatform.com
SMTP_FROM_NAME="Enterprise Modeling Platform"

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30

# ============================================================================
# FILE STORAGE (Optional)
# ============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10 MB in bytes

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_GRAPH_FEATURES=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_AUDIT_LOGGING=true

# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================
ENABLE_QUERY_CACHING=true
CACHE_TTL=3600  # 1 hour
ENABLE_COMPRESSION=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
ENABLE_HOT_RELOAD=true
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false