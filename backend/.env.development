# backend/.env.development
# Development Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
PROJECT_NAME=Enterprise Modeling Platform
VERSION=1.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
API_V1_STR=/api/v1
ALLOWED_HOSTS=*

# =============================================================================
# CORS CONFIGURATION
# CRITICAL: Add all frontend URLs here (comma-separated)
# =============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# =============================================================================
# DATABASE - POSTGRESQL
# =============================================================================
POSTGRES_USER=modeling
POSTGRES_PASSWORD=modeling_dev
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=modeling_platform

# Connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# FALKORDB - GRAPH DATABASE
# =============================================================================
FALKORDB_HOST=falkordb
FALKORDB_PORT=6379
FALKORDB_PASSWORD=
FALKORDB_DB=0
FALKORDB_GRAPH_NAME=modeling_graph

# =============================================================================
# REDIS - CACHING
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
SECRET_KEY=development-secret-key-change-in-production-to-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# EMAIL (For password reset, notifications, etc.)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@modeling-platform.local

# =============================================================================
# STORAGE (For file uploads, exports, etc.)
# =============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=52428800
ALLOWED_FILE_TYPES=.json,.xml,.xmi,.sql,.cypher,.csv

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_GRAPH_SYNC=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_VERSION_CONTROL=true
ENABLE_PUBLISHING_WORKFLOW=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_ROTATION=midnight
LOG_RETENTION=30

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000